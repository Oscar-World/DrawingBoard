<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        android:background="#dbddfe"
        >

        <android.widget.Button
            android:id="@+id/reset_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#bbbbbb"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/increase_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#bbbbbb"
            android:text="+"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/decrease_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#bbbbbb"
            android:text="-"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/black_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#000000"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/red_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#ff0000"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/blue_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#0000ff"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/green_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#22ff22"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

        <android.widget.Button
            android:id="@+id/yellow_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#ffee00"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            />

    </LinearLayout>


    <com.example.drawingboard.DrawBoard
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>